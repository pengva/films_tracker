<div class="card">
  <div class="card-header">
    <%= comment.user.try(:email) %> - <%= comment.created_at %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= comment.try(:body) %></p>
    </blockquote>
    <br/>
    <% if comment != nil && comment.user.try(:id) == current_user.id %>
      <%= form_with(model: comment, method: :delete, html: { 'data-turbo' => "false" }) do |f| %>
        <%= f.submit "Delete", class: "btn btn-outline-danger" %>
      <% end %>
    <% end %>
  </div>

</div>